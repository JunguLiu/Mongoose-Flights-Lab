<body>
  <h1>Add Flight</h1>
  <form action="/flights" method="POST">
    <label
      >Airline:
      <select name="airline">
        <option>American</option>
        <option>Southwest</option>
        <option>United</option>
      </select>
    </label>
    <br />
    <label
      >Airport:
      <select name="airport">
        <option>AUS</option>
        <option>DFW</option>
        <option>DEN</option>
        <option>LAX</option>
        <option>SAN</option>
      </select>
    </label>
    <br />
    <label
      >flightNo:
      <input type="number" name="flightNo" min="10" max="9999" />
    </label>
    <br />
    <label
      >departs:
      <input type="datetime-local" name="departs" />
    </label>
    <br />
    <button type="submit">Submit</button>
  </form>
</body>
